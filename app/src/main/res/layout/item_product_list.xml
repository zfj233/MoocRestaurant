<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/item_bg"
    >

    <ImageView
        android:id="@+id/id_iv_image"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:src="@drawable/item_image"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_iv_image"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/id_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="小慕餐厅"
            android:textStyle="bold"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/id_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="小慕餐厅小慕餐厅小慕餐厅小慕餐厅小慕餐厅小慕餐厅"
            android:layout_marginTop="2dp"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/id_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_iv_image"
        android:text="30元"
        android:layout_toRightOf="@id/id_iv_image"
        android:textColor="#FD8F50"
        />


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/sub"
        android:id="@+id/id_iv_sub"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/id_tv_count_item"
        android:text="2"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/id_iv_sub"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="1dp"
        android:layout_alignBottom="@id/id_iv_image"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/add"
        android:id="@+id/id_iv_add"
        android:layout_toLeftOf="@id/id_tv_count_item"
        android:layout_alignBottom="@id/id_iv_image"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#444444"
        >

    </View>
</RelativeLayout>